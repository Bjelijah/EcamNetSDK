<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.howell.ecamnetsdk.com.demo.ecamnetsdk.VideoModuleActivity">


    <Button
        android:id="@+id/btn_device_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备列表"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_turn_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预览"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_device_list" />

    <Button
        android:id="@+id/btn_turn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回放列表"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_device_list"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_turn_playback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回放"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_turn_list"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_turn_list" />

</android.support.constraint.ConstraintLayout>